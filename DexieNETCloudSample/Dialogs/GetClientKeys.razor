<MudDialog>
    <DialogContent>
        @if (Item is not null)
        {
            <EditForm Model=@Item OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                <MudCard>
                    <MudCardContent>
                        <MudTextField Immediate="true" Placeholder=@Item.PlaceholderClientId Label="ClientId" @bind-Value=@Item.ClientId For=@(() => Item.ClientId) />
                    </MudCardContent>
                    <MudCardContent>
                        <MudTextField Immediate="true" Placeholder=@Item.PlaceholderClientSecret Label="ClientSecret" @bind-Value=@Item.ClientSecret For=@(() => Item.ClientSecret) />
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Disabled=@(!context.Validate()) ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Success" Class="ml-auto">Submit</MudButton>
                    </MudCardActions>
                </MudCard>
            </EditForm>
        }
    </DialogContent>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public CloudKeyData? Item { get; set; }

    void Cancel() => MudDialog?.Cancel();

    protected override void OnInitialized()
    {
        ArgumentNullException.ThrowIfNull(Item);
        ArgumentNullException.ThrowIfNull(MudDialog);

        MudDialog.Options.CloseButton = true;
        MudDialog.SetOptions(MudDialog.Options);
    }

    private void OnValidSubmit(EditContext context)
    {
        ArgumentNullException.ThrowIfNull(Item);
        ArgumentNullException.ThrowIfNull(MudDialog);

        MudDialog.Close(DialogResult.Ok(Item));
    }
}
